  "version": "0.0.0",
  "main": "src/electron/main.js",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "npm run build && electron .",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
